FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY pyproject.toml README.md ./
RUN pip install --upgrade pip && pip install .

COPY MyRapidTransitTracker ./MyRapidTransitTracker

ENV PYTHONPATH=/app

CMD ["python", "-m", "MyRapidTransitTracker.data_ingestion.raw_data_ingestion"]
